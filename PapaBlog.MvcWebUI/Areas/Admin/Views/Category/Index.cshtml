@model CategoryListDto

@{
    Layout = "_Layout";
    ViewBag.Title = "Kategoriler";
}

<div class="container-fluid">
    <h1 class="mt-4">Kategoriler</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Kategori Listesi</li>
    </ol>
    @if (Model.ResultStatus == ResultStatus.Success)
    {
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Kategori Listesi
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Adı</th>
                                <th>Açıklama</th>
                                <th>Aktif Mi</th>
                                <th>Silinmiş Mi</th>
                                <th>Not</th>
                                <th>Oluşturma Tarihi</th>
                                <th>Oluşturan Kullanıcı</th>
                                <th>Düzenleme Tarihi</th>
                                <th>Düzenleyen Kullanıcı</th>
                                <th>İşlme</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Adı</th>
                                <th>Açıklama</th>
                                <th>Aktif Mi</th>
                                <th>Silinmiş Mi</th>
                                <th>Not</th>
                                <th>Oluşturma Tarihi</th>
                                <th>Oluşturan Kullanıcı</th>
                                <th>Düzenleme Tarihi</th>
                                <th>Düzenleyen Kullanıcı</th>
                                <th>İşlme</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model.Categories)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.IsDeleted</td>
                                    <td>@item.IsActive</td>
                                    <td>@item.Note</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>@item.CreatedByName</td>
                                    <td>@item.ModifiedDate.ToShortDateString()</td>
                                    <td>@item.ModifiedByName</td>
                                    <td>
                                        <a class="btn btn-warning btn-sm">Edit</a>
                                        <a class="btn btn-danger btn-sm">Trash</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {

    }
</div>

