<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title || Dashboard</title>

    @await Html.PartialAsync("_PartialCss");
</head>
<body class="sb-nav-fixed">

    @await Html.PartialAsync("_PartialNavbar");

    <div id="layoutSidenav">

        @await Component.InvokeAsync("AdminMenu");

        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>

            @await Html.PartialAsync("_PartialFooter")
        </div>
    </div>

    @await Html.PartialAsync("_PartialJs")
    @await RenderSectionAsync("Scripts",false);
</body>
</html>