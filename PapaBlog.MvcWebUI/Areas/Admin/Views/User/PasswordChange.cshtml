@model UserPasswordChangeDto
@{
    Layout = "_Layout";
    ViewBag.Title = User.Identity.Name + " - Şifre Değiştir";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <form asp-area="Admin" asp-controller="User" asp-action="PasswordChange" method="post">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">@User.Identity.Name - Şifre Değiştir</h3></div>
                    <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="şifreniz">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="yeni şifreniz">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RepeatNewPassword"></label>
                            <input type="password" asp-for="RepeatNewPassword" class="form-control" placeholder="tekrar yeni şifre">
                            <span asp-validation-for="RepeatNewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a class="btn btn-default" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <span class="fas fa-times"></span>
                            İptal
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <span class="fas fa-edit"></span>
                            Güncelle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>