@model UserLoginDto

@{
    Layout = "_LayoutLogin";
    ViewBag.Title = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-transparent">
                    <h3 class="text-center font-weight-light my-4">
                        <i class="fas fa-home"></i>
                        Giriş Yap
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="User" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control py-4" type="email" asp-for="Email" placeholder="e-posta adresi" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password">Şifre</label>
                            <input class="form-control py-4" type="password" asp-for="Password" placeholder="şifre" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" asp-for="RememberMe" />
                                <label class="custom-control-label" asp-for="RememberMe"></label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-success col-6 mr-1" type="submit">
                                <i class="fas fa-sign-in-alt"></i>
                                Giriş Yap
                            </button>
                            <a class="btn btn-outline-info col-6" asp-area="Admin" asp-controller="User" asp-action="ForgatPassword">
                                <i class="fas fa-question"></i>
                                Şifremi unuttum
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small">
                        <button class="btn btn-outline-primary btn-block">
                            <i class="fas fa-user-plus"></i>
                            Kayıt Ol
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>