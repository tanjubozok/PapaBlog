@model UserLoginDto

@{
    Layout = "_LayoutLogin";
    ViewBag.Title = "Giriş Yap";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Giriş Yap</h3></div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="User" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control py-4" type="email" asp-for="Email" placeholder="e-posta adresi" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" asp-for="Password">Şifre</label>
                            <input class="form-control py-4" type="password" asp-for="Password" placeholder="şifre" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input class="custom-control-input" type="checkbox" asp-for="RememberMe" />
                                <label class="custom-control-label" asp-for="RememberMe"></label>
                            </div>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small">Şifremi unuttum?</a>
                            <button class="btn btn-success" type="submit">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div class="small"><a>Kayıt Ol</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
